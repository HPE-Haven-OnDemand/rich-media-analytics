<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#01A982" />
            <stroke
                android:width="1dp"
                android:color="#222222" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#01A982"
                android:endColor="#01A982"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#01A982" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>